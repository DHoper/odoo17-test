<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="tutoring_centre_im_livechat_channel_view_form" model="ir.ui.view">
            <field name="name">im_livechat.channel.form.inherit.tutoring_centre</field>
            <field name="model">im_livechat.channel</field>
            <field name="inherit_id" ref="im_livechat.im_livechat_channel_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[@class='oe_title']" position="replace">

                    <div class="row">
                        <div class="col">
                            <div class="oe_title">
                                <label for="name" class="form-label">Name</label>
                                <field name="name" placeholder="e.g. YourWebsite.com" class="form-control"/>
                            </div>
                            <div class="oe_title d-flex flex-column">
                                <label for="category" class="form-label">Category</label>
                                <field name="category" class="form-control"/>
                            </div>

                        </div>
                        <div class="col">
                            <div class="oe_title">
                                <label for="announcementChannel" class="form-label">Name</label>
                                <field name="announcementChannel" class="form-control"/>
                            </div>
                        </div>
                    </div>

                </xpath>
            </field>
        </record>

    </data>
</odoo>
